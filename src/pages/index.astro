---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import GithubIcon from "../icons/Github.astro";
import MailIcon from "../icons/Mail.astro";
---

<Layout
  title="Porfolio de Alejandro Olvera - Desarrollador y programador web"
  description=""
>
  <main>
    <section class="w-full lg:w-[740px] mx-auto py-44">
      <h1 class="text-white text-5xl font-bold flex gap-x-4 flex-row pb-10">
        Hey, soy Alejandro<a
          href="https://www.linkedin.com/in/alejandrodev8/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2 class="text-2xl opacity-80 text-wrap">
        <span class="text-yellow-200/90"
          >Desarrollador Web Front-end y Back-end</span
        >. De San Luis Potosí, México.
      </h2>
      <nav class="flex gap-x-4 mt-10">
        <SocialPill href="https://www.linkedin.com/in/alejandrodev8/">
          <LinkedInIcon class="w-6 h-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/AlejandroDev8">
          <GithubIcon class="w-6 h-6" />
          Github
        </SocialPill>
        <SocialPill href="mailto:alejandrodeveloper417@gmail.com">
          <MailIcon class="w-6 h-6" />
          alejandrodeveloper417@gmail.com
        </SocialPill>
      </nav>
    </section>
  </main>
</Layout>
